<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <div class="error">
   <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
     <% @book.errors.full_messages.each do |message| %>
     <p><%= message %></p>
     <% end %>
 </div>
 <% end %>


<%= form_with model: @book, method: :patch do |f| %>
<div class="form_box">
  <p>Title</p>
  <%= f.text_field :title %>
</div>
<div class="form_box">
  <p>Body</p>
  <%= f.text_area :body %>
</div>
<div class="form_button">
  <p><%= f.submit 'Update Book' %></p>
</div>
<% end %>

<%= link_to 'Show', @book, class: "show_#{@book.id}" %> |
<%= link_to 'Back', books_path, class: "back" %>
